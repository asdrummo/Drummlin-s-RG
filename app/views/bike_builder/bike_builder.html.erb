<% @page_title = @nav_id.humanize + 'Selection | Bike Builder Beta' %>
<%= render(:partial => 'bike_builder/partials/bike_builder_progress')%>
<div class="center"><h2>
<% if @nav_id == 'drivetrain' %>
	<% if @drivetrain_complete == 'true' %>
	<%= link_to('Continue', {:action => 'front_end'}) %>
	<% else %>
	<%= @nav_id.humanize %> Components.
	<% end %>
	<% if @frame == 'false' %>
		<% @completion_error = 'you need a frame!' %>
	<% end %>
	
<% elsif @nav_id == 'front_end' %>
	<% if @front_end_complete == 'true' %>
	<%= link_to('Continue', {:action => 'wheels'}) %>
	<% else %>
	<%= @nav_id.humanize %> Components.
	<% end %>
	<% if @drivetrain_complete == 'false' %>
		<% @completion_error = 'you need to complete your drivetrain!' %>
	<% end %>


<% elsif @nav_id == 'wheels' %>
	<% if @wheels_complete == 'true' %>
	<%= link_to('Continue', {:action => 'finishing'}) %>
	<% else %>
	<%= @nav_id.humanize %> Components.
	<% end %>
	<% if @front_end_complete == 'false' %>
		<% @completion_error = 'you need to complete your front end!' %>
	<% end %>

<% elsif @nav_id == 'finishing' %>
	<% if @finishing_complete == 'true' %>
	<span style="color:green">Build Completed</span>
	<% else %>
	<%= @nav_id.humanize %> Components.
	<% end %>
	<% if @wheels_complete == 'false' %>
		<% @completion_error = 'you need to complete your wheels!' %>
	<% end %>
<% end %>
</h2></center>

<%= render(:partial => 'bike_builder/partials/component_window') unless @completion_error %>
<hr>
