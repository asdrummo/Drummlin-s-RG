
<div class="center">
	<h1>Listing workshops</h1>
<table class="center" style="width:700px">
  <tr style="text-align:left">
    <th>Client</th>
    <th>Type</th>
	<th>Address</th>
    <th>Location</th>
    <th>Date</th>
    <th>Quantity</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @workshops.each do |workshop| %>
  <tr style="text-align:left" class="<%= cycle('odd', 'even') %>">
    <td><%= workshop.client_id %></td>
	<% if workshop.start_date == nil %>
	<% else %>
    <td><%= workshop.experience %></td>
	<td><%= workshop.address %></td>
    <td><%= workshop.location %></td>
    <td><%= workshop.start_date.to_date.strftime("%m/%d/%Y") %></td>
 	<td><%= workshop.end_date.to_date.strftime("%m/%d/%Y") %></td>
	<td><%= number_to_currency(workshop.price) %></td>
    <td><%= workshop.quantity %></td>
	<% end %>
    <td><%= link_to 'Show', workshop %></td>
    <td><%= link_to 'Edit', edit_workshop_path(workshop) %></td>
    <td><%= link_to 'Destroy', workshop, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Workshop', new_workshop_path %>
</div>
