<div class = "login">
	<%= form_tag(:controller => 'public', :action=> 'attempt_login') do %>
		<table class="">
			<tr>
				<td><%= label_tag(:email) %>:</td>
				<td><%= text_field_tag(:email) %></td>
			</tr>
			<tr>
					<td><%= label_tag(:password) %>:</td>
					<td><%= password_field_tag(:password) %></td>
			</tr>
			<tr>
					<td>&nbsp</td>
					<td><%= submit_tag("login") %></td>
			</tr>
		</table>
		<% end %>
</div>